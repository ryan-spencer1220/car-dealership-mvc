<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dealership Inventory</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using CarDealership.Models;

    <h1>Available Cars!</h1>

    @if (Model.Count == 0)
    {
      <p>There are no cars in the list.</p>
    }
    <ul>
      @foreach (Car element in Model)
      {
        <li>-------------------------</li>
        <li>Year: @element.Year</li>
        <li>Make: @element.Make</li>
        <li>Model: @element.Model</li>
        <li>Miles: @element.Miles</li>
        <li>Price: @element.Price</li>
      }
    </ul>
    <a href="/cars/add">Add a new car!</a>
  </body>
</html>